{
  "name": "league-skin-tracker",
  "version": "1.0.0",
  "description": "League of Legends Skin Collection Tracker",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:renderer\" \"npm run build:main\" \"wait-on dist/renderer.js && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:installer": "npm run build && electron-builder --win nsis"
  },
  "build": {
    "appId": "com.leagueskintracker.app",
    "productName": "League Skin Tracker",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "favicon.ico"
    ],
    "icon": "dist/favicon.ico",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "dist/favicon.ico"
    },
    "portable": {
      "artifactName": "LeagueSkinTracker.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "forceCodeSigning": false
  },
  "keywords": [
    "league",
    "legends",
    "skins",
    "tracker",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/plist": "^3.0.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/verror": "^1.10.11",
    "concurrently": "^8.0.0",
    "css-loader": "^6.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.0.0",
    "better-sqlite3": "^9.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
